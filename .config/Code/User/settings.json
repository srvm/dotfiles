{
    "workbench.colorTheme": "Solarized Dark",
    "editor.fontFamily": "'Roboto Mono for Powerline', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 16,
    "editor.autoClosingBrackets": "never",
    "keyboard.dispatch": "keyCode",

    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<Space>"],
      "commands": [":nohl"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": [","],
      "after": ["<leader>", "<leader>", "<leader>", "b", "d", "w"]
    }
  ]
}
